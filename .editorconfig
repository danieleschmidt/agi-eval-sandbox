root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space

[*.{py,pyi}]
indent_size = 4
max_line_length = 88

[*.{js,ts,tsx,jsx,json,css,scss,html,vue}]
indent_size = 2
max_line_length = 100

[*.{yml,yaml}]
indent_size = 2
max_line_length = 120

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.{sh,bash}]
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4

[*.go]
indent_style = tab
indent_size = 4

[*.{sql,hql}]
indent_size = 2
max_line_length = 120

[*.toml]
indent_size = 2

[Dockerfile*]
indent_style = tab
tab_width = 4

[*.{ini,cfg}]
indent_size = 4

[*.xml]
indent_size = 2