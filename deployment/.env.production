# Production Environment Configuration for AGI Evaluation Sandbox

# Application Settings
ENVIRONMENT=production
VERSION=1.0.0
SECRET_KEY=your-production-secret-key-here
DEBUG=false

# Database Configuration
POSTGRES_DB=agi_eval
POSTGRES_USER=agi_eval
POSTGRES_PASSWORD=your-secure-postgres-password-here
DATABASE_URL=postgresql://agi_eval:your-secure-postgres-password-here@postgres:5432/agi_eval

# Redis Configuration
REDIS_PASSWORD=your-secure-redis-password-here
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/2

# API Provider Keys (Optional - for evaluation capabilities)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
GOOGLE_API_KEY=your-google-api-key-here

# Monitoring & Observability
PROMETHEUS_ENABLED=true
JAEGER_ENABLED=true
JAEGER_AGENT_HOST=jaeger

# Grafana
GRAFANA_PASSWORD=your-secure-grafana-password-here

# Security Settings
MAX_CONCURRENT_EVALUATIONS=10
EVALUATION_TIMEOUT=3600
RATE_LIMIT_ENABLED=true
CORS_ORIGINS=https://your-domain.com,https://api.your-domain.com

# Performance Settings
WORKERS=4
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100
TIMEOUT=60

# Logging
LOG_LEVEL=INFO
STRUCTURED_LOGGING=true

# Build Information (auto-generated during deployment)
BUILD_DATE=
VCS_REF=